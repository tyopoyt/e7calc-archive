{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-infix-ops": [
            "error"
        ],
        // Many globals are used and in some files it would be an excessive amount to annotate, so disable this rule
        "no-undef": "off"
    },
    "plugins": ["@html-eslint"],
    "overrides": [
        {
        "files": ["*.html"],
        "parser": "@html-eslint/parser",
        "extends": ["plugin:@html-eslint/recommended"]
        }
    ]
}
